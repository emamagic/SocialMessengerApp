<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FontTextView">
        <attr name="drawableColor" format="color" />
        <attr name="isPersianNumber" format="boolean" />
        <attr name="text_gravity">
            <flag name="start" value="1" />
            <flag name="end" value="2" />
            <flag name="start_center_vertical" value="3" />
            <flag name="end_center_vertical" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FontButtonWithProgress">
        <attr name="is_enable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleColorImageView">
        <attr name="circleColor" format="color" />
        <attr name="foregroundImageTintColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LimooValidatorInput">
        <attr name="state_default" format="integer" />
        <attr name="state_focused" format="integer" />
        <attr name="state_fail" format="integer" />
    </declare-styleable>

</resources>
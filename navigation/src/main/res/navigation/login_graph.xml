<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_graph"
    app:startDestination="@id/login_by_phone_fragment">

    <action android:id="@+id/action_to_login" app:destination="@id/login_graph"/>

    <fragment
        android:id="@+id/login_by_phone_fragment"
        android:name="com.emamagic.login.phone.LoginByPhoneFragment">
        <action
            android:id="@+id/action_to_change_server_name_fragment"
            app:destination="@id/change_server_name_fragment" />
        <action
            android:id="@+id/action_to_login_by_username_fragment"
            app:destination="@id/login_by_username_fragment" />
        <action
            android:id="@+id/action_to_otp_fragment"
            app:destination="@id/otp_fragment" />
        <action
            android:id="@+id/action_to_terms_policy_fragment"
            app:destination="@id/terms_policy_fragment" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="android-app-limoo://login"/>
    </fragment>


    <fragment android:id="@+id/change_server_name_fragment"
        android:name="com.emamagic.login.server_name.ChangeServerNameFragment"/>


    <fragment android:id="@+id/login_by_username_fragment"
        android:name="com.emamagic.login.user_name.LoginByUsernameFragment">
        <action
            android:id="@+id/action_to_conversation_fragment"
            app:destination="@id/conversation_fragment" />
    </fragment>


    <fragment android:id="@+id/otp_fragment"
        android:name="com.emamagic.login.otp.OtpFragment">
        <action
            android:id="@+id/action_to_conversation_fragment"
            app:destination="@id/conversation_fragment" />
    </fragment>

    <dialog android:id="@+id/terms_policy_fragment"
        android:name="com.emamagic.login.policy.TermsPolicyDialog">
        <argument
            android:name="description"
            app:argType="reference" />
    </dialog>

</navigation>